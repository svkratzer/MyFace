<% if current_user %>
  <script type="text/javascript" >
    window.currentUser = {
      "id": <%= current_user.id %>,
      "firstName": "<%= current_user.first_name %>",
      "lastName": "<%= current_user.last_name %>",
      "email": "<%= current_user.email %>",
      "birthday": "<%= current_user.birthday %>",
      "gender": "<%= current_user.gender %>",
      "bio": "<%= current_user.bio %>",
    };
  </script>
<% end %>

<main id='root'></main>